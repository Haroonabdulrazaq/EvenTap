<% if current_user.nil? %>
  <%= link_to 'Back', :back, class:'button is-primary is-outlined is-pulled-right mt-4' %>
  <%elsif current_user.name == @event.user.name %>
  <span> 
    <%= link_to 'Edit', edit_event_path(@event), class:'button is-success is-outlined is-pulled-left' %>
    <%= link_to 'Delete', event_path(@event), method: :delete, data: {confirm: 'Are you sure you want to delete this event'}, class:'button is-danger is-outlined is-pulled-right' %><br/>
  </span><br/>
    <%= link_to 'Back', :back, class:'button is-outlined is-primary  is-pulled-right mt-4' %>
  <%else%>
    <%= link_to 'Back', :back, class:'button is-primary is-outlined is-pulled-right mt-4' %>
<%end%>