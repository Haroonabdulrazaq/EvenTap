<div class="section">
	<div class="container">
	<div class="columns is-centered">

		<div class="column is-6 box p-6">

		<%= simple_form_for @event do |f| %>
	  <%= f.error_notification %>

	  <div class="field">
	  	<div class="control">
	    <%= f.input :name, label: "Event Name", required: true, autofocus: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
	  	</div>
		</div>

		<div class="field">
	  	<div class="control">
	    <%= f.input :description, as: :text, label: "Description", required: true, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
	  	</div>
		</div>

		<div class="field">
	  	<div class="control">
	    <%= f.input :date, label: "Event Date & Time", required: true, input_html: { class:"select" }, wrapper: false, label_html: { class:"label" } %>
	  	</div>
		</div>
		<div class="field">
	  	<div class="control">
	    	<%= f.input :eventType, label: "Event Type", collection: [["Free", "Free"], ["Paid", "Paid"]] %><br />
	  	</div>
		</div>
					<br />			<br />			<br />
		<div class="field">
			<div class="control">
		 		<%= f.button :submit, "Submit", class:"button is-info is-medium is-pulled-right" %>
		 	</div>
		</div>

		<% end %>
			<br />
		</div>
		</div>
	</div>
</div>