<p id="notice"><%= notice %></p>

<section class="container">
  <div class="columns is-centered is-multiline is-mobile my-5 ">
    <% @events.each do | event | %>
      <div class="card column is-3 box">
          <div class="card-header p-5">
            <div class="media-content">
              <button class="button is-primary is-light is-small is-pulled-right"><%= event.eventType %></button>
              <p class="title is-4 has-text-centered"> <%= event.name %> </p>
              <p class="subtitle is-6"> <strong>Author:</strong> <%= event.user.name %></p>
            </div>
          </div>
        <div class="card-content description">
          <div class="content py-5">
            <%= event.description %>
          </div>
          <div class="content">
             <strong>Created </strong><%= time_ago_in_words(event.created_at) %> ago
          </div>
        </div>
          <div class="card-footer py-0 pl-2">
            <nav class="level">
            <div class="level-left is-mobile is-pulled-right py-3">
              <% if current_user %>
                <% if current_user.name === event.user.name %>
                  <%= link_to edit_event_path(event), class: "level-item" do %>
                      <span class="icon"><i class="fa fa-pencil" arial-hidden="true"></i></span>
                  <% end %>
                  <%= link_to event, method: :delete, data: {confirm: "Are you sure you want to delete?"}, class: "level-item" do %>
                      <span class="icon"><i class="fa fa-trash-o" arial-hidden="true"></i></span>
                  <% end %>
                <% end %>
              <% end %>
              <%= link_to event, class: "level-item" do %>
                  <span class="icon "> Detail </span>
              <% end %>
            </div>
          </nav>
          </div>

      </div>
    <% end %>
  </div>
</section>

<%= link_to 'New Event', new_event_path %>
